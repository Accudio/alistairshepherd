{
  "name": "alistairshepherd",
  "version": "0.3.0",
  "browserslist": "> 0.5%, last 2 versions, IE 10",
  "description": "Website for Alistair Shepherd, frontend web developer, at alistairshepherd.co.uk",
  "author": "Alistair Shepherd <alistair@accudio.com>",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore . && stylelint **/*.scss **/*.sass **/*.vue --ignore-path .gitignore",
    "fix": "eslint --ext .js,.vue --ignore-path .gitignore . --fix && stylelint **/*.scss **/*.sass **/*.vue --ignore-path .gitignore --fix",
    "precommit": "npm run lint",
    "deploy": "npm run generate && surge dist/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.4",
    "@fortawesome/free-brands-svg-icons": "^5.3.1",
    "@fortawesome/free-regular-svg-icons": "^5.3.1",
    "@fortawesome/free-solid-svg-icons": "^5.3.1",
    "@fortawesome/vue-fontawesome": "^0.1.1",
    "@nuxtjs/pwa": "^2.4.0",
    "autoprefixer": "^9.1.3",
    "cssnano": "^4.1.0",
    "husky": "^0.14.3",
    "nuxt": "^1.0.0",
    "postcss-normalize": "^6.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "eslint": "^4.15.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-vue": "^4.0.0",
    "node-sass": "^4.9.3",
    "sass-loader": "^7.1.0",
    "stylelint": "^9.5.0",
    "stylelint-config-sass-guidelines": "^5.2.0",
    "stylelint-scss": "^3.3.0",
    "stylelint-webpack-plugin": "^0.10.5"
  }
}
